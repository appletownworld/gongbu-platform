{
  "name": "gongbu-platform",
  "version": "0.1.0",
  "description": "Gongbu Platform - Educational courses for Telegram",
  "private": true,
  "workspaces": [
    "services/*",
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up -d",
    "dev:build": "docker-compose -f docker-compose.dev.yml up --build -d",
    "dev:rebuild": "docker-compose -f docker-compose.dev.yml build --no-cache && docker-compose -f docker-compose.dev.yml up -d",
    "dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "dev:down": "docker-compose -f docker-compose.dev.yml down",
    "dev:clean": "docker-compose -f docker-compose.dev.yml down -v && docker system prune -f",
    
    "install:all": "npm install && npm run install:services && npm run install:apps && npm run install:libs",
    "install:services": "npm run install --workspaces --if-present",
    "install:apps": "npm run install --workspace=apps/*",
    "install:libs": "npm run install --workspace=libs/*",
    
    "build": "npm run build --workspaces --if-present",
    "build:services": "npm run build --workspace=services/*",
    "build:apps": "npm run build --workspace=apps/*",
    
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:integration": "npm run test:integration --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspace=apps/web",
    
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    
    "type-check": "tsc --noEmit --skipLibCheck",
    "type-check:watch": "npm run type-check -- --watch",
    
    "migrate": "npm run migrate --workspace=services/*",
    "migrate:reset": "npm run migrate:reset --workspace=services/*",
    "seed": "npm run seed --workspace=services/*",
    
    "docker:build": "docker-compose -f docker-compose.dev.yml build",
    "docker:push": "docker-compose -f docker-compose.prod.yml push",
    
    "health": "curl -f http://localhost:3000/health || exit 1",
    "monitor": "open http://localhost:3030", 
    "logs:gateway": "docker-compose -f docker-compose.dev.yml logs -f api-gateway",
    "logs:auth": "docker-compose -f docker-compose.dev.yml logs -f auth-service",
    "logs:course": "docker-compose -f docker-compose.dev.yml logs -f course-service",
    "logs:bot": "docker-compose -f docker-compose.dev.yml logs -f bot-service"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gongbu/platform.git"
  },
  "keywords": [
    "education",
    "telegram",
    "courses",
    "bot",
    "learning",
    "microservices",
    "nestjs",
    "react",
    "typescript"
  ],
  "author": "Gongbu Team",
  "license": "MIT"
}

# Development Dockerfile for Gongbu Notification Service
FROM node:20-alpine

# Install curl for health checks and build dependencies
RUN apk add --no-cache curl python3 make g++

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install all dependencies (including dev dependencies)
RUN npm install

# Generate Prisma client
RUN npx prisma generate

# Copy source code
COPY . .

# Create directories for development
RUN mkdir -p /app/storage/templates /app/storage/attachments /app/logs

# Expose port
EXPOSE 3005

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3005/health/live || exit 1

# Start the application in development mode with hot reload
CMD ["npm", "run", "start:dev"]

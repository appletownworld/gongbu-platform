# Production Environment Variables for Gongbu Platform

# Database Configuration
POSTGRES_USER=gongbu_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://gongbu_user:your_secure_postgres_password_here@postgres:5432/gongbu_prod

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_32_characters

# CORS Configuration
CORS_ORIGIN=https://gongbu.app,https://www.gongbu.app

# API Documentation
SWAGGER_ENABLED=false

# Frontend Configuration
REACT_APP_API_URL=https://api.gongbu.app
REACT_APP_WS_URL=wss://api.gongbu.app

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# SSL Configuration (for Let's Encrypt)
DOMAIN=gongbu.app
EMAIL=admin@gongbu.app

# Monitoring
ENABLE_MONITORING=true
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security
RATE_LIMIT_ENABLED=true
HELMET_ENABLED=true
